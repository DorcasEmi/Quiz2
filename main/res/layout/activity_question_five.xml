<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88cf0947"
    android:orientation="vertical"
    tools:context=".QuestionFive">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="HINT: \n \nFrom the list of the words below, choose the words that are synonyms of the word in bracket."
                android:textColor="@android:color/white"
                android:textSize="19sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 1:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="A person who wants peace at any price is ______. \n (Optimist)"
                android:textColor="#000000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="idealist"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="quixotic"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="romantic"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dreamy"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pessimist"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cynic"
                android:textColor="#5df1e9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="skeptic"
                android:textColor="#5df1e9"
                android:textSize="20sp" />


            <Button
                android:id="@+id/nextButton4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:onClick="Submit"
                android:text="Next" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>