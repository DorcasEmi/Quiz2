<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9680b"
    android:orientation="vertical"
    tools:context=".QuestionThree">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2:"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/profilesize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mothers and fathers should always work-together for the benefit of their children.\n(Work-together) "
        android:textSize="20sp"
        android:textColor="#ffffff"/>

    <RadioGroup
        android:id="@+id/radio_group_question_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/qr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Separate"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/qr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depart"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/qr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooperate"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/qr4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delegate"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/nextButton2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="Submit"
        android:text="Next" />
</LinearLayout>